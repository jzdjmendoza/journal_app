<div id="<%= dom_id category %>">
  <table>

    <thead>
      <tr>
        <th>ID</th>
        <th>Category Name</th>
        <th>Description</th>
        <th>Tasks</th>
      </tr>
    </thead>

    <tbody>
      <tr>
        <td><%= category.id%></td>
        <td><%= category.name%></td>
        <td><%= category.description%></td>
        <td>
          <% category.tasks.each do |task| %>
            <p>
              <%= link_to "#{task.name}", task %>
            </p>  
          <% end %>
        </td>
      </tr>
    </tbody>

  </table>
</div>
